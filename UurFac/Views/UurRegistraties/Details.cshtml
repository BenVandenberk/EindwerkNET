@model UurFac.Models.UurRegistratieDetailViewModel

@{
    ViewBag.Title = "Uurregistratie - Details";
}

@Styles.Render("~/Content/jquery.datetimepicker.css")

<script type="text/javascript">
    var id = @ViewBag.Id;
    var gefactureerd = '@Model.Gefactureerd';
</script>

<h1 class="spacious">Uurregistratie - Details</h1>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.Gebruiker, new { @class = "bold" })
    </div>
    <div class="col-md-2">
        @Html.DisplayFor(model => model.Gebruiker)
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.Departement, new { @class = "bold" })
    </div>
    <div class="col-md-2">
        @Html.DisplayFor(model => model.Departement)
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.Klant, new { @class = "bold" })
    </div>
    <div class="col-md-2">
        @Html.DisplayFor(model => model.Klant)
    </div>
    <div class="col-md-4"></div> 
</div>   
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.UurRegistratieTitel, new {@class = "bold" })
    </div>
    <div class="col-md-2">
        @Html.DisplayFor(model => model.UurRegistratieTitel)
    </div>
    <div class="col-md-4"></div>
    </div>

<div id="tbl_details" class="tabelOnder"></div>

<div class="row bottom10 top10 right10">
    <input type="hidden" id="hdn_gebKlanId" value="@Model.UurRegistratie.GebruikerKlantId" />
    <input type="hidden" id="hdn_gebDepId" value="@Model.UurRegistratie.GebruikerKlant.GebruikerDepartementId" />
    <input type="hidden" id="hdn_depId" value="@Model.UurRegistratie.GebruikerKlant.GebruikerDepartement.Departement.Id" />
    <button id="btn_terug" class="right10 floatRight">Terug</button>
</div>

@Scripts.Render("~/Scripts/jquery.datetimepicker.js")
@Scripts.Render("~/Scripts/moment.min.js")
@Scripts.Render("~/Scripts/uurfac/uurregistratiedetails.js")





