@model UurFac.Models.IndexViewModel
@{
    ViewBag.Title = "Account";
}

<h1>@ViewBag.Title</h1>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4 class="center">Account instellingen en persoonlijke gegevens</h4>
    <hr />
    
    <div class="row">

        <div class="col-lg-4"></div>

        <div class="col-lg-4">

            @using (Html.BeginForm("Update", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <dl class="dl-horizontal">
                    <dt>Paswoord:</dt>
                    <dd>
                        @Html.ActionLink("Verander je paswoord", "ChangePassword") 
                    </dd>

                    <dt class="top10">Email:</dt>
                    <dd class="top10">
                        @Html.EditorFor(model => model.Email)
                    </dd>
                    <dt class="top10">Tel:</dt>
                    <dd class="top10">
                        @Html.EditorFor(model => model.Tel)
                    </dd>
                    <dt class="top10">Gsm:</dt>
                    <dd class="top10">
                        @Html.EditorFor(model => model.Gsm)
                    </dd>

                    <dd>
                        <input type="submit" class="btn btn-default top10 floatRight" value="Opslaan" />
                    </dd>

                </dl>
            }

        </div>

        <div class="col-lg-4"></div>

    </div>   
    
</div>
